{
  "version": 2,
  "builds": [
    {
      "src": "ecommerce-frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://your-backend-on-railway.com/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "ecommerce-frontend/dist/index.html"
    }
  ]
}
